<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.magenta.rx">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.magenta.rx.java.RXApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name="java.service.GeoLocationService"
            android:enabled="true" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCBkAfbrf-WwtFwgnoTRuJxGdO01VZqKzo" />

        <activity android:name=".java.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".java.activity.MapActivity" />
        <activity android:name=".java.activity.ServiceActivity" />
        <activity android:name=".java.activity.RetrofitActivity" />
        <activity android:name=".java.activity.DictionaryActivity" />
    </application>
</manifest>