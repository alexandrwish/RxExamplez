<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto/com.magenta.maxunits.mobile.dlib"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/arrive_map_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/mc_common_bg"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/date_value"
            style="@style/mxMediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#E8E8E8"
            android:textColorHighlight="#E8E8E8" />

        <com.magenta.maxunits.mobile.dlib.view.TimeView
            android:id="@+id/time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date_value"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            custom:hours_color="?attr/defaultListItemTextColor"
            custom:hours_text_size="18sp"
            custom:minutes_color="?attr/defaultListItemTextColor"
            custom:minutes_text_size="12sp" />

        <com.magenta.maxunits.mobile.dlib.view.TimeWindowView
            android:id="@+id/time_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/time_value"
            custom:hours_color="?attr/defaultListItemTextColor"
            custom:hours_text_size="18sp"
            custom:minutes_color="?attr/defaultListItemTextColor"
            custom:minutes_text_size="12sp" />

        <TextView
            android:id="@+id/timer"
            style="@style/mxMediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/time_window"
            android:textColor="#00FF00"
            android:textColorHighlight="#00FF00" />

        <TextView
            android:id="@+id/arrive_map_customer_value"
            style="@style/mxMediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_value"
            android:textColor="#E8E8E8"
            android:textColorHighlight="#E8E8E8" />

        <TextView
            android:id="@+id/arrive_map_address_value"
            style="@style/mxMediumFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrive_map_customer_value"
            android:textColor="#E8E8E8"
            android:textColorHighlight="#E8E8E8" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/arrive_map_button_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/arrive_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/arrive" />

        <Button
            android:id="@+id/abort_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abort_short"
            android:visibility="gone" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/suspend"
            android:visibility="gone" />

        <Button
            android:id="@+id/complete_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/arrive_map_button_panel"
        android:layout_below="@id/arrive_map_header"
        android:layout_marginBottom="4dp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/map_controller"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
</RelativeLayout>