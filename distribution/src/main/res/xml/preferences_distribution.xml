<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/mx_activity_preferences_mx_api">

        <CheckBoxPreference
            android:key="enable.api"
            android:title="@string/enable_api" />

        <EditTextPreference
            android:dependency="enable.api"
            android:inputType="text"
            android:key="api.path"
            android:title="@string/api_path" />

        <EditTextPreference
            android:dependency="enable.api"
            android:inputType="text"
            android:key="api.address"
            android:title="@string/api_address" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/mx_activity_preferences_map_cache">

        <CheckBoxPreference
            android:key="enable.cache"
            android:title="@string/enable_cache" />

        <EditTextPreference
            android:dependency="enable.cache"
            android:inputType="number"
            android:key="clear.unused.cache"
            android:title="@string/max_cache_age" />

        <EditTextPreference
            android:dependency="enable.cache"
            android:inputType="number"
            android:key="used.cache.space"
            android:title="@string/used_cache_space" />
    </PreferenceCategory>
</PreferenceScreen>