<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/run_header"
            style="@style/MXActivityNavigationPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/run_view_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/run_allread_btn"
                android:background="@android:drawable/ic_menu_view"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/change_map_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/run_view_btn"
                android:background="@android:drawable/ic_menu_mapmode"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/call_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/logout_btn"
                android:background="@android:drawable/ic_menu_call"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/run_refresh_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@android:drawable/ic_popup_sync"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/img_logout"
                android:contentDescription="" />

            <ImageView
                android:id="@+id/run_allread_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/run_refresh_btn"
                android:background="@drawable/img_all_read"
                android:contentDescription="" />
        </RelativeLayout>

        <ListView
            android:id="@+id/job_list"
            style="@style/mcListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/mc_common_bg" />
    </LinearLayout>

    <TextView
        android:id="@android:id/empty"
        style="@style/mxLargeFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="@string/mx_noData" />
</RelativeLayout>