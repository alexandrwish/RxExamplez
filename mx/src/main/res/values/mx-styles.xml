<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--job cards-->
    <style name="mxJobCardFirstLine">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/defaultListItemTextColor</item>
    </style>

    <style name="mxJobCardSecondLine">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/defaultListItemTextColor</item>
    </style>

    <style name="mxJobCardThirdLine">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/defaultListItemTextColor</item>
    </style>

    <style name="mxJobCardThirdGrayLine">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/defaultListItemTextColor</item>
    </style>

    <style name="mxJobCardSmallFirstLine">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/defaultListItemTextColor</item>
    </style>
    <!--default fields-->
    <style name="mxActionButtonsPanel">
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/mc_action_buttons_panel_bg</item>
    </style>

    <style name="mxButtonAction" parent="android:Widget.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="mxButtonActionLeft" parent="mxButtonAction">
        <item name="android:background">@drawable/mc_action_button_left_green_bg</item>
    </style>

    <style name="mxButtonActionCenter" parent="mxButtonAction">
        <item name="android:background">@drawable/mc_action_button_center_black_bg</item>
        <item name="android:layout_marginLeft">-14dp</item>
    </style>

    <style name="mxButtonActionRight" parent="mxButtonAction">
        <item name="android:background">@drawable/mc_action_button_right_red_bg</item>
        <item name="android:layout_marginLeft">-14dp</item>
    </style>

    <style name="MXMapActivityNotificationsPanel">
        <item name="android:background">#7F000000</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MXActivityNavigationPanel">
        <item name="android:background">#7f808080</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7F000000</item>
    </style>

    <style name="mxSmallFont">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mxMediumFont">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="mxLargeFont">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="mxVeryLargeFont">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="mxTitleStile">
        <item name="android:textColor">?attr/defaultTextColor</item>
        <item name="android:textSize">21sp</item>
    </style>
</resources>